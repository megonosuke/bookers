<h1>Books</h1>

<% @books.each do |book| %>

  <h4>Title</h4>
  <span><%= book.title %></span>
  <h4>Body</h4>
  <span><%= book.body %></span>
  <a href="/show/books/:id">Show</a>
  <a href='/books/:id/edit'>Edit</a>
  <a href="/books/:id" "data-confirm" = "Are you sure?" >Destroy</a>
<% end %>



<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>